cout<<"\nEnter college university: "; cin>>un;
}
void accept(char p[])
{


if(strcmp(p,un)==0) //checking university name matches or not
{
cout<<"your given university details are: "<<endl;
 
cout<<"college id : "<<cid<<endl; cout<<"college name : "<<name<<endl;
cout<<"college established year : "<<year<<endl; cout<<"college university : "<<un<<endl;
}

}
void accept(int k)
{
if(k==year) //checking university published year matches or not
{
